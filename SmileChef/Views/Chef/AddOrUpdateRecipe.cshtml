@using SmileChef.Models.Enums
@using SmileChef.ViewModels
@model RecipeViewModel

@{
    List<SelectListItem> recipeTypeSelectList = new List<SelectListItem>();
    var enumValues = Enum.GetValues<RecipeType>();
    foreach (var e in enumValues)
    {
        SelectListItem item = new SelectListItem();
        item.Text = e.ToString();
        item.Value = e.ToString();
        recipeTypeSelectList.Add(item);
    }
}

@using (Html.BeginForm("SaveRecipe", "Chef", FormMethod.Post))
{
    @Html.HiddenFor(m => m.RecipeId)
    <div class="container">
        <div class="row align-items-center my-4">
            <div class="col-12 fs-5 pb-1">@Html.LabelFor(m => m.Name, "Recipe name")</div>
            <div class="col-12">@Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter recipe name", id = "recipeName", required = "required" })</div>
            <div class="col-12">
                @Html.DropDownListFor(m => m.RecipeType, recipeTypeSelectList, "Select an option", new { @class = "form-select", id = "recipeTypeDropdown" })
            </div>
            <div class="col-12">
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", id = "priceTextbox", @type = "number", @min = "0", @step = "0.01", disabled = "disabled", @placeholder = "Enter Premium Recipe price" })
            </div>
            <div class="col-12">@Html.ValidationMessageFor(m => m.Name)</div>
        </div>
        <div class="row bg-body-secondary">
            <h3 class="mt-2">Instructions</h3>
            <div class="col-12 mt-2 mb-3">
                <button type="button" class="btn btn-primary w-auto select" onclick="showAddInstructionModal()">Add Instruction</button>
            </div>
            <table class="table table-group-divider table-hover">
                <thead>
                    <tr>
                        <th>Order</th>
                        <th>Description</th>
                        <th>Duration (mins)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Instructions.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(m => m.Instructions[i].OrderId)
                                @Html.HiddenFor(m => m.Instructions[i].InstructionId)
                                @*@Html.TextBoxFor(m => m.Instructions[i].OrderId, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(m => m.Instructions[i].OrderId)*@
                                @Html.TextBox("Index", i + 1, "", new { @class = "form-control", @readonly = "readonly" })
                            </td>
                            <td>
                                @Html.TextBoxFor(m => m.Instructions[i].Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Instructions[i].Description)
                            </td>
                            <td>
                                <input type="number" class="form-control" name="Instructions[@i].Duration" value="@(Model.Instructions[i].Duration.HasValue ? Model.Instructions[i].Duration.Value.TotalMinutes : 0)" />
                                @Html.ValidationMessageFor(m => m.Instructions[i].Duration)
                            </td>
                            <td>
                               @*  @using (Html.BeginForm("DeleteInstruction", "Home", FormMethod.Post))
                                {
                                    @Html.HiddenFor(m => m.RecipeId)
                                    @Html.HiddenFor(m => m.Instructions[i].InstructionId)
                                    <button type="submit" class="btn btn-danger">Remove</button>
                                } *@
                                @Html.ActionLink("Remove", "DeleteInstruction", "Chef", new { @recipeId = Model.RecipeId, @instructionId = Model.Instructions[i].InstructionId }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                    @if (Model.Instructions.Count == 0)
                    {
                        <tr id="noInstructionsMessage">
                            <td colspan="4">No instructions. Click "Add Instruction" to create one.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row mt-3 ps-2">
            <div class="col ps-0">
                <button class="btn btn-primary" type="submit">Save Recipe</button>
            </div>
        </div>
    </div>
}

<!-- Add Instruction Modal -->
<div class="modal fade" id="addInstructionModal" tabindex="-1" aria-labelledby="addInstructionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addInstructionModalLabel">Add Instruction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AddInstruction", "Chef", FormMethod.Post))
                {
                    @Html.Hidden("RecipeName", "", new { @id = "recipeNameHidden" })
                    @Html.Hidden("RecipeId", Model.RecipeId)
                    @Html.Hidden("RecipeType", Model.RecipeType.ToString(), new { @id = "recipeTypeHidden" })
                    @Html.Hidden("Price", Model.Price.HasValue ? Model.Price.Value.ToString("0.00") : "", new { @id = "priceHidden" })
                    <div class="mb-3">
                        <label for="instructionDescription" class="form-label">Description</label>
                        <input type="text" class="form-control" name="Description" id="instructionDescription" placeholder="Enter instruction description">
                    </div>
                    <div class="mb-3">
                        <label for="instructionDuration" class="form-label">Duration (mins)</label>
                        <input type="number" class="form-control" name="Duration" id="instructionDuration" placeholder="Enter duration in minutes">
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Add Instruction</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>

        // Function to toggle price textbox
        function togglePriceTextbox() {
            var recipeType = document.getElementById('recipeTypeDropdown').value;
            var priceTextbox = document.getElementById('priceTextbox');
            if (recipeType === "Premium") {
                priceTextbox.disabled = false;
                priceTextbox.required = true; // Make it required when Premium is selected
            } else {
                priceTextbox.disabled = true;
                priceTextbox.required = false;
                priceTextbox.value = ''; // Clear the value if not premium
            }

            document.getElementById('recipeTypeHidden').value = recipeType;
        }

        // Attach change event to dropdown
        document.getElementById('recipeTypeDropdown').addEventListener('change', togglePriceTextbox);

        // Run on page load in case the form is pre-filled
        togglePriceTextbox();

        function showAddInstructionModal() {
            var modal = new bootstrap.Modal(document.getElementById('addInstructionModal'));
            let recipeName = $('#recipeName').val();
            let recipeType = $('#recipeTypeDropdown').val();
            let price = $('#priceTextbox').val();

            console.log(`recipeName: ${typeof recipeName}`)
            if (recipeName === "" || recipeName === null) {
                Swal.fire({
                    title: "Invalid Recipe Name", 
                    text: "Recipe Name cannot be left blank", 
                    icon: "error"
                }).then(function () {
                    alert("Recipe name invalid validation has been shown successfully!");
                });
                return;
            } else if (recipeName.length > 50){
                Swal.fire({
                    title: "Invalid Recipe Name",
                    text: "Recipe Name cannot exceed 50 characters",
                    icon: "error"
                })
                return;
            }
            modal.show();
        }

        // Update hidden field when recipe name changes
        document.getElementById('recipeName').addEventListener('input', function () {
            document.getElementById('recipeNameHidden').value = this.value;
        });

    

        // Update hidden field when recipe Price changes
        document.getElementById('priceTextbox').addEventListener('input', function () {
            document.getElementById('priceHidden').value = this.value;
        });
    </script>
}
